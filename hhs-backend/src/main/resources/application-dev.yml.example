spring:
  datasource:
    url: jdbc:mysql://localhost:3306/hhs?useUnicode=true&characterEncoding=UTF-8&serverTimezone=Asia/Shanghai&useSSL=false
    username: root
    password: 123456  # 请修改为您的数据库密码
    driver-class-name: com.mysql.cj.jdbc.Driver
  data:
    redis:
      host: localhost
      port: 6379
      database: 0
      password: root  # 请修改为您的 Redis 密码
  jackson:
    timezone: Asia/Shanghai
    date-format: yyyy-MM-dd HH:mm:ss
  ai:
    langchain4j:
      openai:
        chat-model:
          api-key: ${DASH_SCOPE_API_KEY}  # 请在环境变量中设置您的 API Key
          model-name: qwen3-max
          temperature: 0.7
  lifecycle:
    timeout-per-shutdown-phase: 30s

mybatis-plus:
  mapper-locations: classpath*:mapper/**/*Mapper.xml
  configuration:
    map-underscore-to-camel-case: true
    log-impl: org.apache.ibatis.logging.slf4j.Slf4jImpl

knife4j:
  enable: true
  production: false

security:
  jwt:
    # 警告：此密钥仅为示例，请务必修改为您自己的安全密钥
    # 建议使用至少 256 位的随机字符串
    secret: hhs-backend-jwt-secret-key-must-be-at-least-256-bits-long-for-hmac-sha256
    expire-days: 7

management:
  endpoints:
    web:
      exposure:
        include: health,info,shutdown
  endpoint:
    shutdown:
      enabled: true

